PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/epharmacy

# JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Email Configuration (New System)
# Primary: Resend (Free tier: 3000 emails/month)
# Get free API key at: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Fallback: Gmail SMTP (Free unlimited for personal use)  
# Use App Password, not regular password
# Setup: https://support.google.com/accounts/answer/185833
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-digit-app-password

# Email settings
EMAIL_FROM=noreply@yourdomain.com
APP_NAME=ePharmacy
SUPPORT_EMAIL=support@yourdomain.com

# Legacy Email Configuration (kept for compatibility)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000 