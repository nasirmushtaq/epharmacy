UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000 